<div class='my-5 md:mx-4 order-2 lg:order-1 flex flex-col justify-center'>
  <h6 class='font-semibold'>Recibe tu invitación personal</h6>
  <p class='text-sm mt-2 mb-4'>Enterate de nuestros proximos eventos y recibe alertas anticipadas para seguir mejorando en tu carrera!</p>
  <form id='form-registro'>
    <div class='relative z-0 w-full mb-5 group'>
      <input
        type='email'
        name='floating_email'
        id='floating_email'
        class='block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-areda-secondary/50 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-areda-primary-500 focus:outline-none focus:ring-0 focus:border-areda-primary peer'
        placeholder=' '
        required
      />
      <label
        for='floating_email'
        class='peer-focus:font-medium absolute text-sm text-areda-secondary/70 dark:text-gray-400 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:start-0 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto peer-focus:text-areda-primary peer-focus:dark:text-areda-primary peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6'
        >Correo Electrónico</label
      >
    </div>

    <div class='grid md:grid-cols-2 md:gap-6'>
      <div class='relative z-0 w-full mb-5 group'>
        <input
          type='text'
          name='floating_first_name'
          id='floating_first_name'
          class='block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-areda-secondary/50 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-areda-primary peer'
          placeholder=' '
          required
        />
        <label
          for='floating_first_name'
          class='peer-focus:font-medium absolute text-sm text-areda-secondary/70 dark:text-gray-400 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:start-0 rtl:peer-focus:translate-x-1/4 peer-focus:text-areda-primary peer-focus:dark:text-areda-primary peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6'
          >Nombres</label
        >
      </div>
      <div class='relative z-0 w-full mb-5 group'>
        <input
          type='text'
          name='floating_last_name'
          id='floating_last_name'
          class='block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-areda-secondary/50 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-areda-primary peer'
          placeholder=' '
          required
        />
        <label
          for='floating_last_name'
          class='peer-focus:font-medium absolute text-sm text-areda-secondary/70 dark:text-gray-400 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:start-0 rtl:peer-focus:translate-x-1/4 peer-focus:text-areda-primary peer-focus:dark:text-areda-primary peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6'
          >Apellidos</label
        >
      </div>
    </div>
    <div class='grid md:grid-cols-2 md:gap-6'>
      <div class='relative z-0 w-full mb-5 group'>
        <input
          type='tel'
          name='floating_phone'
          id='floating_phone'
          class='block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-areda-secondary/50 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-areda-primary peer'
          placeholder=' '
          required
        />
        <label
          for='floating_phone'
          class='peer-focus:font-medium absolute text-sm text-areda-secondary/70 dark:text-gray-400 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:start-0 rtl:peer-focus:translate-x-1/4 peer-focus:text-areda-primary peer-focus:dark:text-areda-primary peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6'
          >Teléfono (1234567890)</label
        >
      </div>
      <div class='relative z-0 w-full mb-5 group'>
        <input
          type='text'
          name='floating_company'
          id='floating_company'
          class='block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-areda-secondary/50 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-areda-primary peer'
          placeholder=' '
          required
        />
        <label
          for='floating_company'
          class='peer-focus:font-medium absolute text-sm text-areda-secondary/70 dark:text-gray-400 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:start-0 rtl:peer-focus:translate-x-1/4 peer-focus:text-areda-primary peer-focus:dark:text-areda-primary peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6'
          >Compañía - Institucíón Educativa</label
        >
      </div>
    </div>
    <button
      type='submit'
      class='text-white self-start bg-areda-primary hover:bg-areda-secondary/80 transition-colors focus:outline-none font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800'
      >Registrarme - Recibir mi invitación</button
    >
  </form>
</div>

<script>
  const $form = document.getElementById('form-registro') as HTMLFormElement
  const URL_POST = 'https://api.softwaregenera.com/third-parties/areda/registrar_interesado'
  $form?.addEventListener('submit', async (ev: any) => {
    ev.preventDefault()

    const data_envio = {
      nombres: ev.target.floating_first_name.value,
      apellidos: ev.target.floating_last_name.value,
      email: ev.target.floating_email.value,
      telefono: ev.target.floating_phone.value,
      empresa_institucion: ev.target.floating_company.value,
    }

    const query = await fetch(URL_POST, {
      method: 'POST',
      body: JSON.stringify(data_envio),
    })

    const response = await query.json()
    if (response.status) {
      const toast = `
        <div id="toast-default" class="flex mb-5 items-center w-full  p-4 text-gray-500 bg-white rounded-lg shadow dark:text-gray-400 dark:bg-gray-800" role="alert">
            <div class="inline-flex items-center justify-center flex-shrink-0 w-8 h-8 text-blue-500 bg-areda-primary/40 rounded-lg dark:bg-blue-800 dark:text-blue-200">
                <svg class="w-4 h-4 text-areda-secondary" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 18 20">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.147 15.085a7.159 7.159 0 0 1-6.189 3.307A6.713 6.713 0 0 1 3.1 15.444c-2.679-4.513.287-8.737.888-9.548A4.373 4.373 0 0 0 5 1.608c1.287.953 6.445 3.218 5.537 10.5 1.5-1.122 2.706-3.01 2.853-6.14 1.433 1.049 3.993 5.395 1.757 9.117Z"/>
                </svg>
                <span class="sr-only">Fire icon</span>
            </div>
            <div class="ms-3 leading-4 text-sm font-normal">${response.data.nombres} gracias por registrarte, pronto recibirás tu invitación</div>
        </div>
      `
      $form.insertAdjacentHTML('afterbegin', toast)
      $form.reset()
    }
  })
</script>
